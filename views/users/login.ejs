<%- layout('layouts/boilerplate') %>

<div class="d-flex justify-content-center align-items-center mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <img src="https://images.unsplash.com/photo-1713959957908-ca41293553b3?q=80&w=2069&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="" class="card-img-top">
               <div class="card-body">
                 <h5 class="card-title">Login</h5>
                 <form action="/login" method="post" class="validated-form" novalidate>
                    <div class="mb-3">
                        <label class="form-label" for="username" class="form-label">username</label>
                        <input class="form-control" type="text" id="username" name="username" autofocus required>
                        <div class="valid-feedback">Looks good!</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="password" class="form-label">Password</label>
                        <input class="form-control" type="password" id="password" name="password" required>
                        <div class="valid-feedback">Looks good!</div>
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success">Login</button>
                    </div>                    
                </form>
               </div>
            </div>
        </div>
    </div>
</div>
